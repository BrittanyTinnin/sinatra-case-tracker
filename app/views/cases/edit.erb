<h2>Edit Case</h2>

<form action="/cases/<%= @case.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="text" name="title" value="<%= @case.title %>">
    <textarea name="content" cols="80" rows="8"><%= @case.content %></textarea><br /><br />
    <input type="submit" value="submit">
</form>



